//=========================================================
// Start of Connector FirstExpMod
//=========================================================
// Notes:	This connector definition was added in the beginning by default. Maybe we
//		can live without it ?
//=========================================================
connector(FirstExpMod)
{
	analog(0);
	analog(1);
	analog(2);
	analog(3);
	analog(4);
	analog(5);
	analog(6);
	analog(7);
	analog(8);
	analog(9);
	analog(10);
	analog(11);
	analog(12);
	analog(13);
	analog(14);
	analog(15);

	modrow(0,0);	// A db15 connector
	modrow(0,1);	// B db15 connector
	modrow(0,2);	// RUDDER db15 connector
	modrow(0,3);	// not used
	modrow(0,4);	// FLCS
	modrow(0,5);	// FLCS
	modrow(0,6);	// FLCS
};
//=========================================================
// End of Connector FirstExpMod
//=========================================================

//=========================================================
// Start of Connector MCPconn
//=========================================================
// Notes:	This connector definition defines the modules
//		that are used by the MCP.
//=========================================================
connector(MCPconn)
{
	modrow(7,0);	// Rotary module (module 7) Scan Row 0
	
	modrow(1,0);	// 64 button module Scan Row 0 module 1
	modrow(1,1);	// 64 button module Scan Row 1 module 1
	modrow(1,4);	// 64 button module Scan Row 4 module 1 
	modrow(1,5);	// 64 button module Scan Row 5 module 1
	
};
//=========================================================
// End of Connector MCPconn
//=========================================================


//=========================================================
// Start of Connector CP_EFISconn
//=========================================================
// Notes:	This connector definition defines the modules
//		that are used by the EFIS used by the Captain (CP).
//=========================================================
connector(CP_EFISconn)
{
	modrow(7,1);	// Rotary module (module 7) Scan Row 1
	modrow(1,0);	// 64 button module Scan Row 0 module 1
	modrow(1,1);	// 64 button module Scan Row 1 module 1
	modrow(1,3);	// 64 button module Scan Row 3 module 1
	modrow(1,6);	// 64 button module Scan Row 6 module 1
	modrow(1,7);	// 64 button module Scan Row 7 module 1
};
//=========================================================
// End of Connector CP_EFISconn
//=========================================================

//=========================================================
// Start of Connector EDSPconn
//=========================================================
// Notes:	This connector definition defines the modules
//		that are used by the EDSP.
//=========================================================
connector(EDSPconn)
{
	modrow(1,2);	// 64 button module Scan Row 2 module 1
	modrow(1,3);	// 64 button module Scan Row 3 module 1
};
//=========================================================
// End of Connector EDSPconn
//=========================================================

//=========================================================
// Start of Connector CenterConn
//=========================================================
// Notes:	This connector definition defines the modules
//		that are used by the Center.
//=========================================================
connector(Centerconn)
{
	modrow(1,8);	// 64 button module Scan Row 1 module 2
	modrow(1,9);	// 64 button module Scan Row 2 module 2
	modrow(1,10);	// 64 button module Scan Row 3 module 2
};
//=========================================================
// End of Connector Centerconn
//=========================================================

connector(PEDESTALconn)
{
	analog(0);
};

//=========================================================
// Start of Device MCP
//=========================================================
// Notes:	This device definition defines the buttons, rotarys, leds
//		and displays that are used by the MCP.
//=========================================================
device(MCP)
{

	connector(MCPconn);

	button(1,0,b_FO_FD);		// Button 32
	button(1,2,b_AP_Dis_rgt);	// Button 33
	button(1,3,b_AP2);		// Button 34
	button(1,5,b_AP1);		// Button 35
	button(1,6,b_LOC);		// Button 36
	button(2,0,b_APP);		// Button 37
	button(2,2,b_ALT);		// Button 38
	button(2,3,b_AP_Dis_lft);	// Button 39
	button(2,4,b_ALT_ROT);		// Button 40
	button(2,6,b_AP3);		// Button 41
	button(2,7,b_VS);			// Button 42
	button(3,0,b_LNAV);		// Button 43
	button(3,2,b_SPD_MACH);		// Button 44
	button(3,3,b_HDG_ROT);		// Button 45
	button(3,6,b_CP_FD);		// Button 46
	button(3,7,b_VNAV);		// Button 47
	button(4,0,b_ATHR);		// Button 48
	button(4,2,b_SPD_ROT);		// Button 49		
	button(4,3,b_HDG);		// Button 50
	button(4,5,b_SPD);		// Button 51
	button(4,6,b_THR);		// Button 52
	button(4,7,b_FLCH);		// Button 53

	// Rotary Module 7, Rotary1 Scan Row 0
	button(0,0,r_cnt_ALT);		// Altitude setting count,Button 60?
	button(0,1,r_dir_ALT);		// Altitude setting direction,Button 61?
	
	// Rotary Module 7, Rotary2 Scan Row 0
	button(0,2,r_cnt_VS);		// Vertical Speed setting count,Button 58? 
	button(0,3,r_dir_VS);		// Vertical Speed setting direction,Button 59?
	
	// Rotary Module 7, Rotary5 Scan Row 0
	button(0,4,r_cnt_HDG);		// Heading setting count,Button 56?
	button(0,5,r_dir_HDG);		// Heading setting direction,Button 57?	
	
	// Rotary Module 7, Rotary6 Scan Row 0
	button(0,6,r_cnt_SPD);		// Speed count,Button 54? 
	button(0,7,r_dir_SPD);		// Speed direction,Button 55?

	output(leds0,0,0)
	{
		led_FLCH = 0x01;
		led_THR = 0x02;
		led_HDG = 0x04;
		led_SPD = 0x08;
		led_LNAV = 0x10;
		led_VNAV = 0x20;								
		led_ALT = 0x40;
		led_APP = 0x80;		
	};
	output(leds1,0,1)
	{
		led_VS = 0x01;
		led_AP1 = 0x02;
		led_LOC = 0x04;
		led_AP3 = 0x08;
		led_AP2 = 0x10;		
	};
};
//=========================================================
// End of Device MCP
//=========================================================


